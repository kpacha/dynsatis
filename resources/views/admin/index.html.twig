{% extends 'admin/layout.html.twig' %}

{% block title %}Admin your local repositories{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h1>Your local package repositories</h1>
        <p>These are the local repositories managed by Dynsatis</p>
    {% for repo in repos|sort %}
        <div class="col-md-3 col-md-offset-1"><a href="/admin/{{ repo }}">{{ repo }}</a></div>
        <div class="col-md-1 col-md-offset-1"><a href="/admin/{{ repo }}/build"><button class="btn btn-warning btn-sm"><i class="glyphicon glyphicon-refresh"></i></button></a></div>
    {% endfor %}
    </div>
</div>
{% endblock %}